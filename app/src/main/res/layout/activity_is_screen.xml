        android:layout_marginTop="38dp"
        android:text="BACHELOR OF SCIENCE IN INFORMATION SYSTEMS"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/holo_orange_dark" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:text="(4 years)"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/home"
        android:layout_alignStart="@+id/home"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="19dp"
        android:text="Level I accredited"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignStart="@+id/textView9"
        android:layout_alignTop="@+id/textView9"
        android:text="                                 by the Philippine Accrediting Association of Schools, Colleges, and Universities"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="26dp"
        android:text="Students under the BS Information Systems program are trained to handle the managerial side of computer related activities. The focus of the program is effective management of resources â€“ people, money, and computer facilities, especially in areas involving accounting, projections/estimates/feasibility studies, and the like."
